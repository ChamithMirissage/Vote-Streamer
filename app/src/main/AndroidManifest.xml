<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/vote_streamer_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SriLankaVoteStream"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ViewDistrictResultActivity"
            android:exported="false" />
        <activity
            android:name=".DistrictResultsActivity"
            android:exported="false" />
        <activity
            android:name=".LatestResultsActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseResultActivity"
            android:exported="false" />
        <activity
            android:name=".ViewResultsActivity"
            android:exported="false" />
        <activity
            android:name=".AddResultsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>